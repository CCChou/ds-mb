<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="index" class="org.springframework.web.servlet.view.RedirectView">
		<property name="url" value="/ds-mb/index.jsp"/>
	</bean>
	<bean id="redirectMessageBoard" class="org.springframework.web.servlet.view.RedirectView">
		<property name="url" value="/ds-mb/messageBoard.controller"/>
	</bean>
	
	<bean id="loginPage" class="org.springframework.web.servlet.view.InternalResourceView">
		<property name="url" value="/login.jsp"/>
	</bean>
	<bean id="registerPage" class="org.springframework.web.servlet.view.InternalResourceView">
		<property name="url" value="/register.jsp"/>
	</bean>
	<bean id="messageBoard" class="org.springframework.web.servlet.view.InternalResourceView">
		<property name="url" value="/messageBoard/messageBoard.jsp"/>
	</bean>
	<bean id="article" class="org.springframework.web.servlet.view.InternalResourceView">
		<property name="url" value="/messageBoard/article.jsp"/>
	</bean>
	<bean id="result" class="org.springframework.web.servlet.view.InternalResourceView">
		<property name="url" value="/result.jsp"/>
	</bean>
</beans>
